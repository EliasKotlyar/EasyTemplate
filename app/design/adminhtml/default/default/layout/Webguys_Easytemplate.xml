<?xml version="1.0"?>
<layout version="0.1.0">

    <adminhtml_cms_page_edit>
        <reference name="head">
            <action method="addCss"><name>easytemplate/easytemplate.css</name></action>
            <action method="addItem"><type>skin_js</type><name>easytemplate/chooser.js</name></action>
            <action method="addItem"><type>skin_js</type><name>easytemplate/general.js</name></action>
        </reference>
        <reference name="cms_page_edit_tabs">
            <block type="easytemplate/adminhtml_cms_page_edit_tab_templates" name="cms_page_edit_tab_templates">
                <block type="easytemplate/adminhtml_edit_selection" name="selection" as="selection" template="easytemplate/edit/selection.phtml" />
            </block>
            <action method="addTab"><name>templates</name><block>cms_page_edit_tab_templates</block></action>
        </reference>
    </adminhtml_cms_page_edit>

    <adminhtml_cms_block_edit>
        <reference name="head">
            <action method="addCss"><name>easytemplate/easytemplate.css</name></action>
            <action method="addItem"><type>skin_js</type><name>easytemplate/chooser.js</name></action>
            <action method="addItem"><type>skin_js</type><name>easytemplate/general.js</name></action>
        </reference>
        <remove name="cms_block_edit" />
        <reference name="content">
            <block type="easytemplate/adminhtml_cms_block_edit" name="easytemplate_cms_block_edit"></block>
        </reference>
        <reference name="left">
            <block type="easytemplate/adminhtml_cms_block_edit_tabs" name="easytemplate_cms_block_edit_tabs">
                <block type="easytemplate/adminhtml_cms_block_edit_tab_main" name="easytemplate_cms_block_edit_tab_main" />
                <block type="easytemplate/adminhtml_cms_block_edit_tab_content" name="easytemplate_cms_block_edit_tab_content" />
                <block type="easytemplate/adminhtml_cms_block_edit_tab_templates" name="easytemplate_cms_block_edit_tab_templates">
                    <block type="easytemplate/adminhtml_edit_selection" name="selection" as="selection" template="easytemplate/edit/selection.phtml" />
                </block>
                <action method="addTab"><name>main_section</name><block>easytemplate_cms_block_edit_tab_main</block></action>
                <action method="addTab"><name>content_section</name><block>easytemplate_cms_block_edit_tab_content</block></action>
                <action method="addTab"><name>templates</name><block>easytemplate_cms_block_edit_tab_templates</block></action>
            </block>
        </reference>
    </adminhtml_cms_block_edit>

</layout>
