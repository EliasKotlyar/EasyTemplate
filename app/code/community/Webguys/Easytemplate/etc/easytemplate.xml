<?xml version="1.0"?>
<config>
    <easytemplate>
        <simple translate="label">
            <label>Simple Templates</label>
            <templates>
                <h1_text template="easytemplate/template/h1_text.phtml" type="easytemplate/template" translate="label,comment">
                    <label>Heading + Text</label>
                    <image>images/easytemplate/h1_text.png</image>
                    <comment>A simple heading with some additional text</comment>
                    <fields>
                        <h1 translate="label,comment">
                            <label>Heading</label>
                            <comment>The heading of the template</comment>
                            <backend_model>easytemplate/template_data_varchar</backend_model>
                            <input_renderer>easytemplate/input_renderer_text</input_renderer>
                            <sort_order>1</sort_order>
                            <default_value>Example Title</default_value>
                            <required>1</required>cd
                        </h1>

                        <text translate="label,comment">
                            <label>Text</label>
                            <comment>Some text under the heading</comment>
                            <backend_model>easytemplate/template_data_text</backend_model>
                            <input_renderer>easytemplate/input_renderer_textarea</input_renderer>
                            <sort_order>2</sort_order>
                            <default_value>Hallo EasyTemplate Textarea</default_value>
                            <required>1</required>
                        </text>
                    </fields>
                </h1_text>

                <paragraph template="easytemplate/template/paragraph.phtml" type="easytemplate/template" translate="label,comment">
                    <label>Paragraph</label>
                    <image>images/easytemplate/paragraph.png</image>
                    <comment>A simple paragraph for plain text</comment>
                    <fields>
                        <text translate="label,comment">
                            <label>Text</label>
                            <comment>Some text</comment>
                            <backend_model>easytemplate/template_data_text</backend_model>
                            <input_renderer>easytemplate/input_renderer_textarea</input_renderer>
                            <sort_order>1</sort_order>
                            <default_value>Hallo EasyTemplate Paragraph Textarea</default_value>
                            <required>1</required>
                        </text>

                        <alignment translate="label,comment">
                            <label>Alignment</label>
                            <comment>How to align this paragraph</comment>
                            <backend_model>easytemplate/template_data_varchar</backend_model>
                            <input_renderer>easytemplate/input_renderer_select</input_renderer>

                            <input_renderer_source>easytemplate/input_renderer_source_values</input_renderer_source>
                            <values>
                                <left>Left</left>
                                <right>Right</right>
                                <center>Center</center>
                            </values>

                            <sort_order>2</sort_order>
                            <default_value>left</default_value>
                            <required>1</required>
                        </alignment>

                        <socialmediabuttons translate="label,comment">
                            <label>Social media buttons</label>
                            <comment>Which social media buttons</comment>
                            <backend_model>easytemplate/template_data_varchar</backend_model>
                            <input_renderer>easytemplate/input_renderer_multiselect</input_renderer>

                            <input_renderer_source>easytemplate/input_renderer_source_values</input_renderer_source>
                            <values>
                                <facebook>Facebook</facebook>
                                <google>Google+</google>
                                <twitter>Twitter</twitter>
                            </values>

                            <sort_order>3</sort_order>
                            <default_value>facebook,twitter</default_value>
                            <required>0</required>
                        </socialmediabuttons>
                    </fields>
                </paragraph>
            </templates>
        </simple>
        <complex translate="label">
            <label>Complex Templates</label>
            <templates>
                <imagegallery template="easytemplate/template/imagegallery.phtml" type="easytemplate/template" translate="label,comment">
                    <label>Gallery</label>
                    <comment>A gallery with photos</comment>
                    <image>images/easytemplate/imagegallery.png</image>
                    <fields>
                        <text translate="label,comment">
                            <label>Text</label>
                            <comment>Some text</comment>
                            <backend_model>easytemplate/template_data_text</backend_model>
                            <input_renderer>easytemplate/input_renderer_textarea</input_renderer>
                            <sort_order>1</sort_order>
                            <default_value>Hallo EasyTemplate Imagegallery Textarea</default_value>
                            <required>1</required>
                        </text>
                    </fields>
                </imagegallery>
            </templates>
        </complex>
    </easytemplate>
</config>
