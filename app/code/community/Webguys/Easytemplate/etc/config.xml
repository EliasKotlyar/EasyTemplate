<?xml version="1.0"?>
<config>
    <modules>
        <Webguys_Easytemplate>
            <version>1.0.0.1</version>
        </Webguys_Easytemplate>
    </modules>

    <global>
        <helpers>
            <easytemplate>
                <class>Webguys_Easytemplate_Helper</class>
            </easytemplate>
        </helpers>

        <blocks>
            <easytemplate>
                <class>Webguys_Easytemplate_Block</class>
            </easytemplate>
        </blocks>

        <models>
            <easytemplate>
                <class>Webguys_Easytemplate_Model</class>
                <resourceModel>easytemplate_resource</resourceModel>
            </easytemplate>
            <easytemplate_resource>
                <class>Webguys_Easytemplate_Model_Resource</class>
                <entities>
                    <template>
                        <table>easytemplate</table>
                    </template>
                    <group>
                        <table>easytemplate_group</table>
                    </group>

                    <template_data_varchar>
                        <table>easytemplate_data_varchar</table>
                    </template_data_varchar>
                </entities>
            </easytemplate_resource>
        </models>

        <resources>
            <easytemplate_setup>
                <setup>
                    <module>Webguys_Easytemplate</module>
                </setup>
            </easytemplate_setup>
        </resources>

    </global>

    <adminhtml>
        <events>
            <adminhtml_cms_page_edit_tab_main_prepare_form>
                <observers>
                    <easytemplate_adminhtml_cms_page_edit_tab_main_prepare_form>
                        <type>singleton</type>
                        <class>easytemplate/observer</class>
                        <method>adminhtml_cms_page_edit_tab_main_prepare_form</method>
                    </easytemplate_adminhtml_cms_page_edit_tab_main_prepare_form>
                </observers>
            </adminhtml_cms_page_edit_tab_main_prepare_form>
        </events>
        <layout>
            <updates>
                <easytemplate>
                    <file>Webguys_Easytemplate.xml</file>
                </easytemplate>
            </updates>
        </layout>
    </adminhtml>

    <phpunit>
        <suite>
            <modules>
                <Webguys_Easytemplate />
            </modules>
        </suite>
    </phpunit>

    <easytemplate>
        <simple translate="label">
            <label>Simple Templates</label>
            <templates>
                <h1_text template="easytemplate/template/h1_text.phtml" type="easytemplate/template" translate="label,comment">
                    <label>Heading + Text</label>
                    <comment>A simple heading with some additional text</comment>
                    <fields>
                        <h1 translate="label,comment">
                            <label>Heading</label>
                            <comment>The heading of the template</comment>
                            <backend_model>easytemplate/template_data_varchar</backend_model>
                            <input_renderer>easytemplate/input_renderer_text</input_renderer>
                            <sort_order>1</sort_order>
                            <default_value>Example Title</default_value>
                            <required>1</required>
                        </h1>

                        <text translate="label,comment">
                            <label>Text</label>
                            <comment>Some text under the heading</comment>
                            <backend_model>easytemplate/source_text</backend_model>
                            <input_renderer>easytemplate/renderer_textarea</input_renderer>
                            <sort_order>1</sort_order>
                            <default_value>Hallo EasyTemplate Textarea</default_value>
                            <required>1</required>
                        </text>
                    </fields>
                </h1_text>

                <paragraph template="easytemplate/template/paragraph.phtml" type="easytemplate/template" translate="label,comment">
                    <label>Paragraph</label>
                    <comment>A simple paragraph for plain text</comment>
                    <fields>
                        <text translate="label,comment">
                            <label>Text</label>
                            <comment>Some text</comment>
                            <backend_model>easytemplate/source_text</backend_model>
                            <input_renderer>easytemplate/renderer_textarea</input_renderer>
                            <sort_order>1</sort_order>
                            <default_value>Hallo EasyTemplate Paragraph Textarea</default_value>
                            <required>1</required>
                        </text>
                    </fields>
                </paragraph>
            </templates>
        </simple>
        <complex translate="label">
            <label>Complex Templates</label>
            <templates>
                <imagegallery template="easytemplate/template/imagegallery.phtml" type="easytemplate/template" translate="label,comment">
                    <label>Gallery</label>
                    <comment>A gallery with photos</comment>
                    <fields>
                        <text translate="label,comment">
                            <label>Text</label>
                            <comment>Some text</comment>
                            <backend_model>easytemplate/source_text</backend_model>
                            <input_renderer>easytemplate/renderer_textarea</input_renderer>
                            <sort_order>1</sort_order>
                            <default_value>Hallo EasyTemplate Imagegallery Textarea</default_value>
                            <required>1</required>
                        </text>
                    </fields>
                </imagegallery>
            </templates>
        </complex>
    </easytemplate>

</config>