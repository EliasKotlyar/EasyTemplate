<?xml version="1.0"?>
<config>
    <modules>
        <Webguys_Easytemplate>
            <version>1.0.0.2</version>
        </Webguys_Easytemplate>
    </modules>

    <global>
        <helpers>
            <easytemplate>
                <class>Webguys_Easytemplate_Helper</class>
            </easytemplate>
        </helpers>

        <blocks>
            <easytemplate>
                <class>Webguys_Easytemplate_Block</class>
            </easytemplate>
        </blocks>

        <models>
            <easytemplate>
                <class>Webguys_Easytemplate_Model</class>
                <resourceModel>easytemplate_resource</resourceModel>
            </easytemplate>
            <easytemplate_resource>
                <class>Webguys_Easytemplate_Model_Resource</class>
                <entities>
                    <template>
                        <table>easytemplate</table>
                    </template>
                    <group>
                        <table>easytemplate_group</table>
                    </group>

                    <template_data_varchar>
                        <table>easytemplate_data_varchar</table>
                    </template_data_varchar>

                    <template_data_text>
                        <table>easytemplate_data_text</table>
                    </template_data_text>
                </entities>
            </easytemplate_resource>
        </models>

        <resources>
            <easytemplate_setup>
                <setup>
                    <module>Webguys_Easytemplate</module>
                </setup>
            </easytemplate_setup>
        </resources>

    </global>

    <adminhtml>
        <events>
            <adminhtml_cms_page_edit_tab_main_prepare_form>
                <observers>
                    <easytemplate_adminhtml_cms_page_edit_tab_main_prepare_form>
                        <type>singleton</type>
                        <class>easytemplate/observer</class>
                        <method>adminhtml_cms_page_edit_tab_main_prepare_form</method>
                    </easytemplate_adminhtml_cms_page_edit_tab_main_prepare_form>
                </observers>
            </adminhtml_cms_page_edit_tab_main_prepare_form>
            <controller_action_predispatch_adminhtml_cms_page_save>
                <observers>
                    <easytemplate_controller_action_predispatch_adminhtml_cms_page_save>
                        <type>singleton</type>
                        <class>easytemplate/observer</class>
                        <method>controller_action_predispatch_adminhtml_cms_page_save</method>
                    </easytemplate_controller_action_predispatch_adminhtml_cms_page_save>
                </observers>
            </controller_action_predispatch_adminhtml_cms_page_save>
        </events>
        <layout>
            <updates>
                <easytemplate>
                    <file>Webguys_Easytemplate.xml</file>
                </easytemplate>
            </updates>
        </layout>
    </adminhtml>

    <phpunit>
        <suite>
            <modules>
                <Webguys_Easytemplate />
            </modules>
        </suite>
    </phpunit>
</config>