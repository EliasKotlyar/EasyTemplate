<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Webguys_Easytemplate:etc/easytemplate.xsd">
    <easytemplate>

        <group code="test" translate="label" enabled="1">
            <label>Test Templates</label>
            <templates>

                <template code="testtemplate"
                          template="easytemplate/template/testtemplate.phtml"
                          type="easytemplate/template"
                          translate="label,comment"
                          enabled="1"
                          sort="1"
                          min_sizey="1"
                          min_sizex="1"
                          max_sizex="1"
                          max_sizey="12"
                        >
                    <label>Test Text template</label>
                    <comment>A test template</comment>
                    <fields>

                        <field code="field1" model="easytemplate/template_data_varchar">

                            <backend sort="1" translate="label,comment">
                                <label>Text 1</label>
                                <comment>Comment 1</comment>
                                <input type="text" required="0"/>
                            </backend>

                        </field>

                        <field code="field2" model="easytemplate/template_data_varchar">

                            <backend sort="10" translate="label,comment">
                                <label>Text 2</label>
                                <comment>Comment 2</comment>
                                <input type="text" required="0"/>
                            </backend>

                        </field>

                    </fields>
                </template>

                <template code="imagetest"
                          template="path/to/template.phtml"
                          enabled="1"
                          type="easytemplate/template"
                          sort="10"
                        >
                    <label>Test</label>
                    <comment>Bla Blub</comment>
                    <fields>
                        <field code="image_test" model="easytemplate/template_data_varchar">

                            <backend sort="5" translate="label,comment">
                                <label>Magento Media Gallery</label>
                                <comment>Comment for image-input</comment>
                                <input type="select" required="0">
                                    <param name="abc" translate="value">
                                        <value>test</value>
                                    </param>
                                </input>
                            </backend>

                            <frontend renderer="easytemplate/renderer_image">
                                <param name="blub">
                                    <value>test</value>
                                </param>
                            </frontend>

                        </field>
                    </fields>
                </template>

            </templates>
        </group>
    </easytemplate>
</config>
